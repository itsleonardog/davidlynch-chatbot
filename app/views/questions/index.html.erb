<div class="main" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('red-room.jpg') %>);">
  <div class="container chatbot">
    <div class="chat-header">
      <h1>Chat with David Lynch</h1>
      <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" do %>
          <i class="fa-solid fa-arrow-right-from-bracket" style="font-size: x-large; color: black;"></i>
        <% end %>
      <% else %>
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      <% end %>
    </div>
    <div id="questions">
      <%= render @questions %>
    </div>

    <%= render "form", question: @question %>
  </div>
</div>
