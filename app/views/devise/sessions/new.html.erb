<div class="lynch-auth-container">
  <!-- Red curtains on the sides -->
  <div class="auth-curtain left"></div>
  <div class="auth-curtain right"></div>
  
  <!-- Ambient and noise overlays -->
  <div class="auth-ambient-overlay"></div>
  <div class="auth-noise-overlay"></div>
  
  <div class="auth-content">
    <h2>ENTER THE RED ROOM</h2>
    <div class="zigzag-line"></div>
    
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'auth-form' }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    placeholder: "your_email@example.com",
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    placeholder: "••••••••",
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "LOG IN" %>
      </div>
    <% end %>
    
    <div class="devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
